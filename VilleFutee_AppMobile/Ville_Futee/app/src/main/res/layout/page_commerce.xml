<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/page_commerce"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >

        <ImageButton
            android:id="@+id/back_button_infocommerce"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nomCommerce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nom du commerce"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infosCommerce"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/adresseCommerce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ici vient l'adresse du commerce"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heures d'ouverture :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/horaireCommerce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ici vient les jours et heures d'ouverture"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/descriptionCommerce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ici vient la description"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>


    </LinearLayout>

</LinearLayout>