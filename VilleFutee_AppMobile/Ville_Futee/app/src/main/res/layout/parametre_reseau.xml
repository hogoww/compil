<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#0965fa"
        android:id="@+id/linearLayout1"
        >

        <ImageButton
            android:id="@+id/back_button_main_reseau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Réseau"
            android:paddingRight="30dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout1"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/last_public_button"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Dernières publications"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mes_reseaux_button"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Mes réseaux"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/parcour_reseau_button"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Parcourir les réseaux"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/creer_reseau_button"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Créer un réseau"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>